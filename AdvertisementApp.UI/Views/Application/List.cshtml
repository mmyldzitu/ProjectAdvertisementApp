@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}


<div class="container-fluid">
    @{ if (Model?.Count > 0)
        {
            <div class="text-end my-3 p-1">
                <a asp-action="CreateAdvertisement" asp-controller="Application">Yeni İlan Oluştur</a> 

            </div>

            <table class="mt-3 table table-sm table-hover" table-stripped>
                <thead>
                    <tr>
                        <th>İlan</th>
                        <th>Oluşturma Zamanı</th>
                        <th>Açıklama</th>
                        <th>Durumu</th>
                        <th>Güncelle</th>
                        <th>Sil </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.createdDate.ToString("dddd, dd MMMM yyyy")</td>
                            <td>@(Html.Raw(@item.Description.Substring(0,20)))...</td>
                            <td>@(@item.Status? "Aktif":"Pasif")</td>

                            <td><a asp-action="UpdateAdvertisement" asp-controller="Application" asp-route-id="@item.Id"  class="btn btn-outline-secondary">Güncelle</a></td>
                            <td> <a asp-action="RemoveAdvertisement" asp-controller="Application" asp-route-id="@item.Id" class="btn btn-outline-warning">Sil</a></td>


                        </tr>
                    }


                </tbody>

            </table>

        }
        else
        {
            <div class="text-end my-3 p-1">
                <a asp-action="CreateAdvertisement" asp-controller="Application">Yeni İlan Oluştur</a>

            </div>
            <div class="mt-3 text-center lead">
                Herhangi Bir İş İlanı Bulunmamaktadır
            </div>

        }


    }


</div>
